<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tasks Index</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <!-- views/fruits/index.ejs -->
<body>
    <!-- views/fruits/index.ejs -->
    <a href="/tasks/new">Add New Task</a>
    <h1>All Tasks</h1>
    <ul>
      <% tasks.forEach(task => { %>
        <li><a href="/tasks/<%= task._id %>"><%= task.name %></a></li> 
        <!-- to make each task name clickable we wrap an a tag -->
      <% }); %>
    </ul>
  </body>
</html>
